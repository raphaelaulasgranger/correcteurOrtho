{
  "manifest_version": 3,
  "name": "Correcteur IA Français",
  "version": "1.0",
  "description": "Correction orthographique en temps réel avec IA pour le français",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://api-inference.huggingface.co/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Correcteur IA"
  },
  "icons": {
  "16": "icon16.png",
  "32": "icon32.png",
  "64": "icon64.png"
}
}
